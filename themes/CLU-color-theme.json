{
   "name": "Tron Legacy Theme",
   "type": "dark",
   "colors": {
      "editor.background": "#000000",
      "editor.foreground": "#E0F7FA",
      "editorCursor.foreground": "#00FFFF",
      "editor.lineHighlightBackground": "#005086cb",
      "editor.selectionBackground": "#014a4f",

      "editor.inactiveSelectionBackground": "#003B5C80",
      
      "activityBar.background": "#000000",
      "sideBar.background": "#000000",
      "statusBar.background": "#00121c",
      "statusBar.foreground": "#E0F7FA",
      "titleBar.activeBackground": "#000000",
      "titleBar.activeForeground": "#00FFFF",
      "button.background": "#1DE9F6",
      "button.foreground": "#000000",
      "button.hoverBackground": "#0019f7"
   },
   "tokenColors": [
      {
         "scope": ["keyword", "storage.type", "storage.modifier"],
         "settings": {
            "foreground": "#00FFFF",
            "fontStyle": "bold"
         }
      },
      {
         "scope": ["string", "constant.other.string"],
         "settings": {
            "foreground": "#FFAB40"
         }
      },
      {
         "scope": ["constant", "constant.language"],
         "settings": {
            "foreground": "#FF4081"
         }
      },
      {
         "scope": ["entity.name.type", "entity.name.class"],
         "settings": {
            "foreground": "#FFF176"
         }
      },
      {
         "scope": ["string", "constant.other.symbol"],
         "settings": {
            "foreground": "#FFF176"
         }
      },
      {
         "scope": ["variable", "variable.parameter"],
         "settings": {
            "foreground": "#E0F7FA"
         }
      },
      {
         "scope": ["comment", "punctuation.definition.comment"],
         "settings": {
            "foreground": "#5cbeff"
         }
      },
      {
         "scope": ["function", "entity.name.function"],
         "settings": {
            "foreground": "#2667ff"
         }
      },
      {
         "scope": ["constant.numeric"],
         "settings": {
            "foreground": "#00FF94"
         }
      },
      {
         "scope": ["invalid", "invalid.illegal"],
         "settings": {
            "foreground": "#ff0000",
            "fontStyle": "underline"
         }
      },
      {
         "scope": ["support", "support.class", "support.function"],
         "settings": {
            "foreground": "#FF4081"
         }
      },
      {
         "scope": ["meta", "meta.definition.variable"],
         "settings": {
            "foreground": "#FFAB40"
         }
      },
      {
         "scope": ["markup.heading", "markup.heading.setext"],
         "settings": {
            "foreground": "#FFEB3B",
            "fontStyle": "bold"
         }
      },
      {
         "scope": ["markup.italic"],
         "settings": {
            "fontStyle": "italic"
         }
      },
      {
         "scope": ["markup.bold"],
         "settings": {
            "fontStyle": "bold"
         }
      }
   ]
}
